{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "shark-conf.js",
      "dist/**/*.js",
      "build/**/*.js"
    ]
  },
  "rules": {
    "ordered-imports": false,
    "no-console": [
      true,
      "warning"
    ],
    "interface-name": [
      true,
      "never-prefix"
    ],
    "comment-format": [
      false,
      "check-space"
    ]
  }
}